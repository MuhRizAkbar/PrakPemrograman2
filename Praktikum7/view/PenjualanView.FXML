<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PenjualanController">
   <children>
      <VBox spacing="15.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <children>
            <VBox spacing="10.0">
               <children>
                  <HBox spacing="20.0">
                     <children>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Pilih Pelanggan" />
                              <ComboBox fx:id="cbPelanggan" maxWidth="1.7976931348623157E308" />
                           </children>
                        </VBox>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Pilih Buku" />
                              <ComboBox fx:id="cbBuku" maxWidth="1.7976931348623157E308" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>

                  <HBox spacing="20.0">
                     <children>
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Jumlah" />
                              <TextField fx:id="txtJumlah" prefWidth="100.0" promptText="0" />
                           </children>
                        </VBox>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Total Harga (Otomatis)" />
                              <TextField fx:id="txtTotal" editable="false" promptText="Rp 0" style="-fx-background-color: #eee;" />
                           </children>
                        </VBox>
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Tanggal" />
                              <DatePicker fx:id="dpTanggal" prefWidth="150.0" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>

                  <HBox spacing="10.0">
                     <children>
                        <Button onAction="#onAdd" prefWidth="150.0" text="Simpan Transaksi" />
                        <Button onAction="#onDelete" prefWidth="100.0" text="Hapus Data" />
                     </children>
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>

            <TableView fx:id="tblPenjualan" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="colPelanggan" prefWidth="150.0" text="Pelanggan" />
                <TableColumn fx:id="colBuku" prefWidth="150.0" text="Buku" />
                <TableColumn fx:id="colJumlah" prefWidth="50.0" style="-fx-alignment: CENTER;" text="Jml" />
                <TableColumn fx:id="colTotal" prefWidth="120.0" text="Total" />
                <TableColumn fx:id="colTanggal" prefWidth="100.0" text="Tanggal" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </children>

</AnchorPane>
