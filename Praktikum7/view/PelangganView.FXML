<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PelangganController">
   <children>
      <VBox spacing="15.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <children>
            <!-- BAGIAN FORM -->
            <VBox spacing="10.0">
               <children>
                  <Label text="Nama" />
                  <TextField fx:id="txtNama" promptText="Nama Lengkap" />
                  
                  <Label text="Email" />
                  <TextField fx:id="txtEmail" promptText="contoh@email.com" />
                  
                  <Label text="Telepon" />
                  <TextField fx:id="txtTelepon" promptText="No Telp" />
                  
                  <HBox spacing="10.0">
                     <children>
                        <Button onAction="#onAdd" prefWidth="80.0" text="Add" />
                        <Button onAction="#onEdit" prefWidth="80.0" text="Edit" />
                        <Button onAction="#onDelete" prefWidth="80.0" text="Delete" />
                     </children>
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
            <TableView fx:id="tblPelanggan" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="colNama" prefWidth="200.0" text="Nama" />
                <TableColumn fx:id="colEmail" prefWidth="250.0" text="Email" />
                <TableColumn fx:id="colTelepon" prefWidth="150.0" text="Telepon" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </children>

</AnchorPane>
