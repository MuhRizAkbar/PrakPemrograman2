<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.BukuController">
   <children>
      <VBox spacing="15.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <children>
            <VBox spacing="10.0">
               <children>
                  <Label text="Judul Buku" />
                  <TextField fx:id="txtJudul" promptText="Masukkan Judul" />
                  
                  <Label text="Penulis" />
                  <TextField fx:id="txtPenulis" promptText="Nama Penulis" />
                  
                  <HBox spacing="20.0">
                     <children>
                        <VBox HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Harga (Rp)" />
                              <TextField fx:id="txtHarga" promptText="Angka" />
                           </children>
                        </VBox>
                        <VBox HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Stok" />
                              <TextField fx:id="txtStok" promptText="Angka" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>

                  <HBox spacing="10.0">
                     <children>
                        <Button onAction="#onAdd" prefWidth="80.0" text="Add" />
                        <Button onAction="#onEdit" prefWidth="80.0" text="Edit" />
                        <Button onAction="#onDelete" prefWidth="80.0" text="Delete" />
                     </children>
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>

            <TableView fx:id="tblBuku" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="colJudul" prefWidth="250.0" text="Judul" />
                <TableColumn fx:id="colPenulis" prefWidth="150.0" text="Penulis" />
                <TableColumn fx:id="colHarga" prefWidth="100.0" text="Harga" />
                <TableColumn fx:id="colStok" prefWidth="80.0" text="Stok" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </children>

</AnchorPane>

