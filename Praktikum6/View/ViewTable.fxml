<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="10.0" 
      xmlns="http://javafx.com/javafx/21" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="Controller.Controller">

   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>

   <children>
      <Label text="Data Mahasiswa">
         <font>
            <Font name="System Bold" size="24.0" />
        </font> 
      </Label>
      <TableView fx:id="tableView" prefHeight="400.0" prefWidth="300.0">
        <columns>
          <TableColumn fx:id="nimCol" minWidth="100.0" prefWidth="120.0" text="NIM" />
          
          <TableColumn fx:id="namaCol" minWidth="150.0" prefWidth="180.0" text="Nama" />
        </columns>
        
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
      </TableView>
   </children>
</VBox>